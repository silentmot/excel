# =============================================================================
# Alasela Operations - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in actual values
# NEVER commit .env file to version control
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST={host}
DB_PORT={port}
DB_NAME={database_name}
DB_USER={username}
DB_PASSWORD={password}
DB_MAX_CONNECTIONS={max_connections}
DB_IDLE_TIMEOUT={idle_timeout_ms}
DB_CONNECT_TIMEOUT={connect_timeout_ms}

# Example values:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=alasela_ops
# DB_USER=postgres
# DB_PASSWORD=your_secure_password
# DB_MAX_CONNECTIONS=20
# DB_IDLE_TIMEOUT=30000
# DB_CONNECT_TIMEOUT=2000

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
NEXTAUTH_URL={application_url}
NEXTAUTH_SECRET={secret_key}

# Example values:
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# To generate NEXTAUTH_SECRET:
# openssl rand -base64 32

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV={environment}
NEXT_PUBLIC_APP_URL={public_url}
NEXT_PUBLIC_API_URL={api_url}

# Example values:
# NODE_ENV=development
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================
LOG_LEVEL={log_level}
LOG_FORMAT={format}

# Example values:
# LOG_LEVEL=info
# LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
FEATURE_EXPORT_EXCEL={true_or_false}
FEATURE_EXPORT_POWERBI={true_or_false}
FEATURE_AUDIT_LOG={true_or_false}

# Example values:
# FEATURE_EXPORT_EXCEL=true
# FEATURE_EXPORT_POWERBI=true
# FEATURE_AUDIT_LOG=true

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
RATE_LIMIT_REQUESTS={requests_per_window}
RATE_LIMIT_WINDOW_MS={window_duration_ms}

# Example values:
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# VALIDATION
# =============================================================================
# All placeholders must be replaced with actual values
# Required variables: DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD, NEXTAUTH_URL, NEXTAUTH_SECRET
# Optional variables can be omitted to use defaults
